@model IEnumerable<DAL.Product>

<div class="container-fluid">

    @if (Model.Count() > 0)
    {
        <h2 class="h2 text-center fw-bolder" style="color:darkgray"> Products </h2>
        <div class="row mt-2">
            <table class="table table-responsive table-striped">

                <thead style="color:olivedrab">
                    <tr>
                        <th>
                            @Html.Label("Id")
                        </th>

                        <th>
                            @Html.Label("Name")
                        </th>
                        <th>
                            @Html.Label("Date of Purchase")
                        </th>
                        <th>
                            @Html.Label("Product")
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prd in Model)
                    {
                        <tr>
                            <td>
                                @prd.ProductId
                            </td>
                            <td>
                                @prd.Name
                            </td>
                            <td>
                                @prd.DateofPurchase.ToShortDateString()
                            </td>
                            <td>
                                @prd.UnitPrice.ToString("C")
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditProduct", "Product", new { area = "Admin" }, new { @class = "btn btn-sm btn-success" })
                                @Html.ActionLink("Delete", "DeleteProduct", "Product", new { area = "Admin" }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="row">
            <p class="text-capitalize fw-bolder .textColor">
                No Products
            </p>
        </div>
    }
</div>