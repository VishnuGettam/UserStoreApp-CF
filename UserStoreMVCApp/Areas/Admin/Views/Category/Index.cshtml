@model IEnumerable<DAL.Category>

<div class="container-fluid">

    @if (Model.Count() > 0)
    {
        <h2 class="h2 text-center fw-bolder" style="color:darkgray"> Categories </h2>
        <div class="row mt-2">
            <table class="table table-responsive table-striped">

                <thead style="color:olivedrab">
                    <tr>
                        <th>
                            @Html.Label("Category Id")
                        </th>
                        <th>
                            @Html.Label("Category Name")
                        </th>

                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prd in Model)
                    {
                        <tr>
                            <td>
                                @prd.CategoryId
                            </td>
                            <td>
                                @prd.CategoryName
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "EditCategory", "Category", new { area = "Admin" }, new { @class = "btn btn-sm btn-success" })
                                @Html.ActionLink("Delete", "DeleteCategory", "Category", new { area = "Admin" }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="row">
            <p class="text-capitalize fw-bolder .textColor">
                No Categories
            </p>
        </div>
    }
</div>