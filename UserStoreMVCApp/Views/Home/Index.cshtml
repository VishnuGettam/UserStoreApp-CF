@model IEnumerable<DAL.Product>

<div class="container-fluid">

    <div class="row m-4">
        @if (Model.Count() > 0)
        {
            foreach (var prd in Model)
            {
                <div class="col-4">
                    <div class="card m-2">
                        <img class="card-img-top" alt="No Image" src="@prd.ProductImage" />
                        <div class="card-body">
                            <h2 class="card-header">@prd.Name</h2>
                            <p class="card-text"> @prd.UnitPrice.ToString("C") </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>